<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityWallet">

    <TextView
        android:id="@+id/titleWallet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/titleWallet"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/pink"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/pink"
                android:padding="15dp">

                <Button
                    android:id="@+id/walletTopUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:text="@string/walletTopUp"
                    android:textSize="15sp" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/walletBalance"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/pink"
            android:gravity="center"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@color/pink"
            android:paddingTop="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/wallet1"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet2"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet3"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet4"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet5"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet6"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet7"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet8"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet9"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

                <FrameLayout
                    android:id="@+id/wallet10"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:paddingTop="10sp"></FrameLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragDiscover">
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragHistory">
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragScan">
        </FrameLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnWallet"
            android:text="@string/btnWallet"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:background="@color/green"
            android:paddingTop="12sp"
            android:drawableTop="@drawable/img_wallet"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragAccount">
        </FrameLayout>

    </LinearLayout>

</LinearLayout>