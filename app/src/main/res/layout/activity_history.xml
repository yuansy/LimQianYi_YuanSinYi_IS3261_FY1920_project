<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityHistory">

    <TextView
        android:id="@+id/titleHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/titleHistory"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/pink">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

<!--        <lecho.lib.hellocharts.view.LineChartView-->
<!--            android:id="@+id/chart"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"/>-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history1">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history2">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history3">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history4">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history5">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history6">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history7">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history8">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history9">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:id="@+id/history10">
            </FrameLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragDiscover">
        </FrameLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnHistory"
            android:text="@string/btnHistory"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:background="@color/green"
            android:paddingTop="12sp"
            android:drawableTop="@drawable/img_history"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragScan">
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragWallet">
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragAccount">
        </FrameLayout>

    </LinearLayout>

</LinearLayout>